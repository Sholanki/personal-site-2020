<section class="u-spaceItems">
  {% for post in postslist | reverse %}
    <article
      {% if post.url == url %} data-current="current item"{% endif %}>
      <h3 class="u-textSize2 u-md-textSize3">
        <a class="u-flex " href="{{ post.url | url }}">
          {% if post.data.title %}
            <span class="u-spaceRight02">{{ post.data.title }}</span>
             {% if post.data.link %}
              {% include "svg/link-icon.svg" %}
             {% endif %}
          {% else %}
            Untitled
          {% endif %}
        </a>
      </h3>
      {% if post.data.summary %}
        <p class="u-textSize1">
          {{ post.data.summary }}
        </p>
      {% endif %}
    </article>
  {% endfor %}
</section>
