<section class="Bookshelf-content Grid">
  {% for project in projectslist | reverse %}
    <article{% if project.url == url %} data-current="current item"{% endif %} class="Bookshelf-item">
      <h3>
        <a href="{{ project.url | url }}">
          {% if project.data.title %}
            {{ project.data.title }}
          {% else %}
            Untitled
          {% endif %}
        </a>
      </h3>
      {% if project.data.summary %}
        <p>
          {{ project.data.summary }}
        </p>
      {% endif %}
      {# <p>
        <time datetime="{{ project.date | machineDate }}">
          <small>{{ project.date | readableDate }} by {{ metadata.author.name }}</small>
        </time>
      </p> #}
      {# {% if project.data.tags %}
        <p>
          {% for tag in project.data.tags %}
            {%- if tag != "project" -%}
              {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
            {%- endif -%}
          {% endfor %}
        </p>
      {% endif %} #}
    </article>
  {% endfor %}
</section>
