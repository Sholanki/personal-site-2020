---
layout: layouts/base.njk
section: project
---

<article>

 <section class="SectionIntro">
    <h1>{{ title }}</h1>
    <p class="u-textSize2 u-md-textSize3">
      Some projects that I've had the pleasure to work on
    </p>
  </section>

  {{ layoutContent | safe }}

  {# <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
    </small>
  </p> #}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/projects/' | url }}">‚Üê Project index</a>
</nav>
