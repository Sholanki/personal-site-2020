---
layout: layouts/base.njk
section: post
---

<article>

  <div class="PageTopper u-extendFull">
    <div class="PageTopper-label ContainerProse">
      <h1>{{ title }}</h1>
      <p class="Callout u-textSize2 u-md-textSize3">
        <time datetime="{{ date | machineDate }}">
          {{ date | readableDate }}
        </time>
      </p>
    </div>
  </div>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Post index</a>
</nav>
