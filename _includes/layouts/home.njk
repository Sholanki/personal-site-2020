---
layout: layouts/base.njk
class: home
section: home
---

<section class="ContentHome u-lg-padTop06">
  <article class="ContentHome-inner u-padTop02">

    <div class="Grid Grid--home">

      <div
        class="HomeIntro
               u-flex u-flexAlignItemsCenter u-flexJustifyCenter"
      >
        <div class="HomeIntro-inner">
          <h1>Hi. I'm {{ title }},</h1>
          <span class="Callout u-textSize2 u-md-textSize3">
            {{ layoutContent | safe }}
          </span>
        </div>
      </div>

      <div class="u-padRight6 u-lg-padTop06">
        {% include "svg/home-illustration-02.svg" %}
      </div>

    </div>

    <div class="Grid u-spaceTop6 u-padTop6">

      <div class="HomePosts">
        <h3 class="u-textSize3 u-spaceBottom2">
          Latest articles
        </h3>
        {% set postslist = collections.latest %}
        {% include "components/postslist.njk" %}
      </div>

      <ul class="u-textSize1 u-spaceItems04">
        <h4 class="u-textSize2 u-spaceBottom">Find me here</h4>
        {% for item in social.sites %}
        <li>
          <a class="u-textSize1" href="{{ item.url }}">
            {{ item.name | capitalize }}
          </a>
        </li>
        {% endfor %}
      </ul>

    </div>

